<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <Button
        android:id="@+id/btnSwitchToListAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:onClick="switchToListAllLutemons"
        android:text="LIST ALL LUTEMONS"
        app:layout_constraintBottom_toTopOf="@+id/btnSwitchToMoveLutemons"
        app:layout_constraintEnd_toEndOf="@+id/btnSwitchToMoveLutemons"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="@+id/btnSwitchToMoveLutemons" />

    <Button
        android:id="@+id/btnSwitchToBattle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9800"
        android:onClick="switchToBattle"
        android:text="BATTLE"
        app:layout_constraintBottom_toBottomOf="@+id/btnSwitchToTraining"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSwitchToTraining"
        app:layout_constraintTop_toTopOf="@+id/btnSwitchToTraining" />

    <Button
        android:id="@+id/btnSwitchToTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9800"
        android:onClick="switchToTraining"
        android:text="TRAINING"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSwitchToMoveLutemons"
        app:layout_constraintVertical_bias="0.346" />

    <Button
        android:id="@+id/btnSwitchToAddNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:onClick="switchToAddNewLutemon"
        android:text="Add New Lutemon"
        app:layout_constraintBottom_toTopOf="@+id/btnSwitchToListAll"
        app:layout_constraintEnd_toEndOf="@+id/btnSwitchToListAll"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnSwitchToListAll" />

    <Button
        android:id="@+id/btnSwitchToMoveLutemons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="switchToMoveLutemons"
        android:text="MOVE LUTEMONS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.478" />

    <Button
        android:id="@+id/btnSwitchToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF9800"
        android:onClick="switchToHome"
        android:text="HOME"
        app:layout_constraintBottom_toBottomOf="@+id/btnSwitchToTraining"
        app:layout_constraintEnd_toStartOf="@+id/btnSwitchToTraining"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnSwitchToTraining" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOCATIONS"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnSwitchToTraining"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSwitchToMoveLutemons"
        app:layout_constraintVertical_bias="0.804" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:letterSpacing="0.5"
        android:text="LUTEMON"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSwitchToAddNew"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>